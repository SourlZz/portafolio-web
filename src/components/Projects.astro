---
import CIcon from './icons/CIcon.astro'
import BlenderIcon from './icons/Blendericon.astro'
import HTML5Icon from './icons/HTML5Icon.astro'
import JSIcon from './icons/JsIcon.astro'
import PythonIcon from './icons/PythonIcon.astro'
import PhpIcon from './icons/PhpIcon.astro'
import LinkButton from './LinkButton.astro'
import GitHub from './icons/Github.astro'
import Link from './icons/Link.astro'

const TAGS = {
    C: {
        name: 'C',
        class: "bg-blue-950 text-white",
        icon: CIcon 
    },
    Blender: {
        name: 'Blender',
        class: "bg-orange-700 text-white",
        icon: BlenderIcon 
    },
    HTML5: {
        name: 'HTML5',
        class: "bg-orange-900 text-white",
        icon: HTML5Icon 
    },
    JS: {
        name: 'JavaScript',
        class: "bg-yellow-400 text-white",
        icon: JSIcon
    },
    PYTHON: {
        name: 'Python',
        class: "bg-yellow-600 text-white",
        icon: PythonIcon
    }, 
    PHP: {
        name: 'PHP',
        class: "bg-gray-500 text-white",
        icon: PhpIcon
    }, 


}
const PROJECTS  = [
    {
        title: 'Evaluacion Docente', 
        description: 'Programa hecho con C, donde utilizamos sockets y hilos para hacer la conección con multiples clientes y estos puedan realizar la evaluación de los docente',
        github: '#',
        image: 'public/img/docentes.webp',
        tags: [TAGS.C],
        hashtags: []


    },
    {
        title: 'Detección de Líneas de Carretera', 
        description: 'Proyecto que utiliza OpenCV para procesar videos y detectar líneas de carretera mediante técnicas de procesamiento de imágenes.', 
        github: 'https://github.com/SourlZz/road-line', 
        image: 'public/img/roadline.webp', 
        tags: [TAGS.PYTHON],
        hashtags: []
    },

    {
        title: "Animación por Computadora",
        description: "Proyecto web que utiliza Three.js para renderizar modelos 3D creados en Blender. El proyecto se ejecuta de manera local e incluye modelos descargados y creados manualmente.",
        link: "https://codesandbox.io/p/sandbox/proyecto-final-animacion-3l8z9r",
        github: "https://github.com/SourlZz/P03_Proyecto_Final",
        image: "public/img/threejs.webp",
        tags: [TAGS.Blender, TAGS.JS],
        hashtags:[]
    }, 
    // {
    //     title: "Juego de Gato en PHP",
    //     description: "Implementación del clásico juego de gato (tic-tac-toe) utilizando PHP, HTML y JavaScript.",
    //     github: "https://github.com/SourlZz/gatoEnPHP",
    //     tags: [TAGS.PHP, TAGS.HTML5, TAGS.JS]
    // }




]
---

{
    PROJECTS.map(({image, title, description, tags, hashtags, github, link}) => (
        <article class="flex flex-col md:flex-row gap-4 mb-8">
            <img 
                class="rounded shadow-2xl shadow-white/10 w-full md:w-1/3"
                src={image} 
                alt={`Foto del proyecto ${title}`} 
            />
            <div class="flex flex-col w-full md:w-2/3">
                <h3 class="text-2xl font-semibold mb-2">{title}</h3>
                <p class="mt-2 text-gray-700 dark:text-gray-400">{description}</p>
                <ul class="flex gap-x-4 flex-row mb-2">
                    {
                        tags.map((tag) => (
                            <li>
                                <span class={`flex gap-x-2 rounded-full text-xs mp-2 ${tag.class} py-1 px-2`}>
                                    <tag.icon class="size-6"></tag.icon>
                                    <span class="flex items-center font-semibold">{tag.name}</span>
                                </span>
                            </li>
                        ))
                    }
                </ul>
                <ul class="flex gap-x-2">
                    {
                        (hashtags || []).map((hashtag) => (
                            <li class="mx-0.5">{hashtag}</li>
                        ))
                    }
                </ul>
                <footer class="flex items-end justify-start mt-4 gap-x-4">
                {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
              )}
              </footer>
            </div>
        </article>
    ))
}